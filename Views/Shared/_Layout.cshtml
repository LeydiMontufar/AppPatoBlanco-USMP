<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AppPatoBlanco_USMP</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/styles.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/AppPatoBlanco_USMP.styles.css" asp-append-version="true" />
     <link href="https://cdnjs.cloudflare.com/ajax/libs/SimpleLightbox/2.1.0/simpleLightbox.min.css" rel="stylesheet" />
     <script src="https://kit.fontawesome.com/134f75f772.js" crossorigin="anonymous"></script>
</head>
<body >
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark fixed-top py-3 bg-dark" id="mainNav">
            <div class="container px-4 px-lg-5">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Pato Blanco</a>
                <button class="navbar-toggler text-dark" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                             <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                            </li>
                       
                        <!--Contacto-->
                           <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Contacto" asp-action="Index">Contacto</a>
                        </li>
                        <!--Comprar desde la web-->
                           <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Menu" asp-action="Index">Menu</a>
                        </li>
                        <!--Quienes Somos-->
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Quienes" asp-action="Index">Quienes Somos</a>
                        </li>
                        
                        <li class="nav-item">
                                 <form asp-controller="Menu" asp-action="Index">
                                    <p> <input type="text" name="searchString"><input type="submit" value="Buscar"/> </p>
                                  </form>
                        </li>
                    </ul>
                    <partial name="_LoginPartial" />
                    
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <br>
<br>
<br>
<br>
<br>
<br>
<footer id="footer" class="bg-dark text-white">
    <div class="container">
        <div class="row">           
            <div class="col-sm-2 content">                 
               <h4>Servicios</h4>
            <ul>
              <li><a href="https://localhost:7009/">Home</a></li>
              <li><a href="https://localhost:7009/Contacto">Contacto</a></li>
              <li><a href="https://localhost:7009/Menu">Menu</a></li>              
              <li><a href="https://localhost:7009/Quienes">Quienes Somos</a></li>
            </ul>
            </div>
            <div class="col-sm-6 content">   
                <!--logo-->
                <a href="" class="col-3 text-reset text-uppercase d-flex align-items-center">
                    <img src="~/img/logopato.jpg" alt="" class="img-logo mr-2">
                </a>
                <!--redes sociales-->
                <ul class="col-3 list-unstyled">
                <li class="font-weight-bold">Redes Sociales</li>
                <li class="d-flex justify-content-between " align-items=center>
                   <a href="#"class="text-reset">
                       <i class="fa-brands fa-facebook"></i>
                   </a>                   
                   <a href="#"class="text-reset">
                       <i class="fa-brands fa-whatsapp"></i>
                   </a>
                   <a href="#"class="text-reset">
                       <i class="fa-brands fa-instagram"></i>
                   </a>
                   <a href="#"class="text-reset"></a>
                </li>  
                </ul>
                <div class="container footer-bottom ">
                <div class="copyright text-center">
                    Todos los derechos reservados. 
                </div>
                </div>             
            </div>
            <div class="col-sm-4 mapp">
               <div data-aos="fade-up">
                <iframe style="border:0; width: 450px; height: 200px;" src="https://www.google.com/maps/embed?pb=!1m14!1m8!1m3!1d12097.433213460943!2d-74.0062269!3d40.7101282!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x0%3A0xb89d1fe6bc499443!2sDowntown+Conference+Center!5e0!3m2!1smk!2sbg!4v1539943755621" frameborder="0" allowfullscreen></iframe>
                </div>
            </div>
        </div>
    </div>
  </footer> 
  <style>
      .content{
          display:flex;
          flex-direction: column;
          justify-content:center;
          align-items:center
      }
      .mapp{
           display:flex;
          flex-direction: column;
          justify-content:flex-end;
          align-items:flex-end      
      }
  </style>


    
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>