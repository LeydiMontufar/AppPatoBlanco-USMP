@model IEnumerable<AppPatoBlanco_USMP.Models.Producto>


@{
    ViewData["Title"] = "Menu-";
    
}

<br>
<br><br>

<!-- Header-->
        <header class="bg-ligth py-5">
            <div class="container px-4 px-lg-5 my-5">
                <div class="text-center text-black">
                    <h1 class="display-4 fw-bolder">Comida Gastronomica</h1>
                    <p class="lead fw-normal text-white-50 mb-0">With this shop hompeage template</p>
                </div>
            </div>


        </header>
        <!-- Section-->

    <form asp-controller="Menu" asp-action="Index">
    <p>
        Nombre: <input type="text" name="searchString">
        <input type="submit" value="Filter">
    </p>
    </form>


        <section class="py-5">
            
            
            <div class="container px-4 px-lg-5 mt-5">
            
                <div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center">

                    @foreach (var item in Model) {

                    <div class="col mb-5">
                        <div class="card h-100">
                            <!-- Product image-->
                            <img class="card-img-top" src="~/img/carrito/@item.Imagen" alt="..." />
                            <!-- Product details-->
                            <div class="card-body p-4">
                                <div class="text-center">
                                    <!-- Product name-->
                                    <h5 class="fw-bolder">@Html.DisplayFor(modelItem => item.Nombre)</h5>
                                    <!-- Product price-->
                                    <p class="fw">s/. @Html.DisplayFor(modelItem => item.Precio)</p>
                                    
                                </div>
                            </div>
                            <!-- Ver Producto-->
                            <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
                                <div class="text-center"><a class="btn btn-outline-dark mt-auto" asp-action="Details" asp-route-id="@item.Id">Ver Platillo</a></div>
                            </div>
                            <!-- Añadir al carro-->
                            <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
                                <div class="text-center"><a class="btn btn-outline-dark mt-auto" asp-action="Add" asp-route-id="@item.Id">Añadir al carro</a></div>
                            </div>

                        </div>
                        
                    </div>

                }


            

                </div>
            </div>
        </section>


